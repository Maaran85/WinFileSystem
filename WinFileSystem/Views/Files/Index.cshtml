@model IEnumerable<Framework.File>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-dark table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FileId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.filetype)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.filesize)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DirId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DirectoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CurrentLength)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaximumLength)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.lastDateAccessed)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastUpdated)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OwnerId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FileId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.content)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.filetype)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.filesize)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DirId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DirectoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CurrentLength)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaximumLength)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.lastDateAccessed)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastUpdated)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OwnerId)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
